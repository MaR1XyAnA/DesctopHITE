<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    x:Class="DesctopHITE.PerformanceFolder.PageFolder.SettingsBodyFolder.UpdateApplicationPage" 
    mc:Ignorable="d"
    Style="{DynamicResource BodySpacePageStyle}">
    <Grid>
        <Border
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="10"
            Width="600"
            Height="270"
            Visibility="Visible"
            Style="{DynamicResource BorderInformation}">
            <StackPanel Margin="10" Style="{DynamicResource TextBlockDominatesTextBoxStackPanel}">
                <StackPanel Margin="0 0 0 3.5" Style="{DynamicResource HorizontalDataStackPanel}">
                    <TextBlock
                        Style="{DynamicResource MainStyleTextBlock}"
                        Text="Версия обновления:"
                        Margin="0 0 3.5 0"/>
                    <TextBlock
                        Style="{DynamicResource OtherStyleTextBlock}"
                        Text="1.12.2"
                        Margin="3.5 0 0 0"/>
                </StackPanel>
                <StackPanel Style="{DynamicResource HorizontalDataStackPanel}">
                    <TextBlock
                        Style="{DynamicResource MainStyleTextBlock}"
                        Text="Дата обновления:"
                        Margin="0 0 3.5 0"/>
                    <TextBlock
                        Style="{DynamicResource OtherStyleTextBlock}"
                        Text="24/04/2023"
                        Margin="3.5 0 0 0"/>
                </StackPanel>
                <StackPanel Margin="0 20 0 0" Orientation="Vertical" Style="{DynamicResource HorizontalDataStackPanel}">
                    <TextBlock
                        HorizontalAlignment="Left"
                        Style="{DynamicResource MainStyleTextBlock}"
                        Text="Что добавили:"
                        Margin="0 0 3.5 0"/>
                    <TextBlock
                        x:Name="TitleUpDateTextBlock"
                        Style="{DynamicResource OtherStyleTextBlock}"
                        Margin="3.5 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Grid
            Height="400"
            Width="400"
            Margin="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Right">
            <Ellipse 
                x:Name="LoadingCircle0"
                Width="250"
                Height="250"
                StrokeDashArray="30 25"
                StrokeThickness="7" 
                Stroke="#462AD8"/>
            <Ellipse 
                x:Name="LoadingCircle1"
                Width="300"
                Height="300"
                StrokeDashArray="40 30"
                StrokeThickness="7" 
                Stroke="#462AD8"/>
            <Ellipse 
                x:Name="LoadingCircle2"
                Width="350"
                Height="350"
                StrokeThickness="7" 
                StrokeDashArray="40 35"
                Stroke="#462AD8"/>
            <Ellipse 
                x:Name="LoadingCircle3"
                Width="400"
                Height="400"
                StrokeThickness="7" 
                StrokeDashArray="50 40"
                Stroke="#462AD8"/>
        </Grid>
    </Grid>
</Page>
