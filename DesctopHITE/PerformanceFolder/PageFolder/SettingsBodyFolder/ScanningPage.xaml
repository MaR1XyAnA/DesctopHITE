<Page 
    x:Class="DesctopHITE.PerformanceFolder.PageFolder.SettingsBodyFolder.ScanningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    Style="{DynamicResource BodySpacePageStyle}">
    <Grid>
        <StackPanel Width="1311" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 10 0 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Последнее сканирование было произведено:"
                    Margin="0 0 2 0"/>
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="15/02/2023 16:50"
                    Margin="2 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Результат сканирования:"
                    Margin="0 0 2 0"/>
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Отлично"
                    Margin="2 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Кем сканировалось:"
                    Margin="0 0 2 0"/>
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Error404 Error404 Error404 (Admin)"
                    Margin="2 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Продолжительность сканирования:"
                    Margin="0 0 2 0"/>
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="13:42"
                    Margin="2 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="Сканирование:"
                    Margin="0 0 2 0"/>
                <TextBlock
                    Style="{DynamicResource MainStyleTextBlock}"
                    Text="134\134"
                    Margin="2 0 0 0"/>
            </StackPanel>
            <Button
                Height="40"
                Width="220"
                x:Name="TestButton"
                Click="TestButton_Click"
                Content="СКАНИРОВАТЬ"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0 20 20 0"/>
        </StackPanel>
    </Grid>
</Page>
