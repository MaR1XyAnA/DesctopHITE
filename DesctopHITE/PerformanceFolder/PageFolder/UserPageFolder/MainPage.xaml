<Page 
    x:Class="DesctopHITE.PerformanceFolder.PageFolder.UserPageFolder.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    IsVisibleChanged="Page_IsVisibleChanged"
    Style="{DynamicResource MainUserPageStyle}">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Visibility="Visible" Style="{DynamicResource BorderInformation}">
                <StackPanel Margin="20 10" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock
                        TextAlignment="Center"
                        x:Name="HelloyTextBlock"
                        Style="{DynamicResource MainStyleTextBlock}"
                        Margin="0 0 0 5"/>
                    <TextBlock
                        TextAlignment="Center"
                        x:Name="NowTimeTextBlock"
                        Style="{DynamicResource MainStyleTextBlock}"
                        FontSize="100"
                        FontFamily="\ContentFolder\FontFolder\#Dosis ExtraLight"
                        Margin="0 5 0 2"/>
                    <TextBlock
                        Margin="0 2 0 5"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        x:Name="NowDayTextBlock"
                        Style="{DynamicResource MainStyleTextBlock}"
                        FontSize="30"/>
                    <TextBlock
                        Margin="0 5 0 0"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        x:Name="NowHolidayTextBlock"
                        Style="{DynamicResource MainStyleTextBlock}"
                        FontSize="30"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
