<Window 
    x:Class="DesctopHITE.PerformanceFolder.WindowsFolder.CaptchaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsVisibleChanged="Window_IsVisibleChanged"
    WindowStartupLocation="CenterScreen"
    Style="{DynamicResource AuthorizationWindowStyle}">
    <Border Style="{DynamicResource MainBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Background="Transparent">
                <Polygon 
                    Points="200,0, 230,15, 600,15, 630,0" 
                    x:Name="PoligonName"
                    Fill="#2a2a2a"
                    Opacity="1">
                    <Polygon.Effect>
                        <DropShadowEffect 
                            Direction="-90"
                            Color="{DynamicResource ShadowColor}"
                            BlurRadius="5"
                            ShadowDepth="0.5"
                            Opacity="0.5"
                            RenderingBias="Performance"/>
                    </Polygon.Effect>
                </Polygon>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Margin="0 0 0 20">
                        <TextBlock
                            FontFamily="Times New Roman"
                            x:Name="TextCaptchaTextBlock"
                            Style="{DynamicResource MainStyleTextBlock}"/>
                        <Image
                            Height="150"
                            Width="500"
                            Source="\ContentFolder\ImageFolder\CaptchaBackground.png"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Stretch="UniformToFill"/>
                    </Grid>
                    <Grid Margin="0 20 0 10">
                        <Border Style="{DynamicResource ShadowBorder}">
                            <Border.Effect>
                                <DropShadowEffect 
                                    Direction="315"
                                    Color="{DynamicResource ShadowColor}"
                                    BlurRadius="5"
                                    ShadowDepth="2"
                                    Opacity="0.5"
                                    RenderingBias="Performance"/>
                            </Border.Effect>
                        </Border>
                        <TextBox
                            KeyDown="CaptchaTextBox_KeyDown"
                            MaxLength="20"
                            TextChanged="CaptchaTextBox_TextChanged"
                            x:Name="CaptchaTextBox"
                            Padding="39 0 0 0"
                            Width="600"
                            Style="{DynamicResource MainTextBoxStyle}"/>
                        <TextBlock
                            Text="&#xf23f;"
                            Style="{DynamicResource IconTextBlockStyle}"/>
                        <TextBlock
                            x:Name="HintCaptchaTextBlock"
                            Margin="40 0 0 0"
                            Text="Капча"
                            Style="{DynamicResource HintTextBlockStyle}"/>
                    </Grid>
                    <StackPanel Margin="0 10 0 0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button
                            Margin="0 0 10 0"
                            x:Name="EnterCaptchaButton"
                            Click="EnterCaptchaButton_Click"
                            Width="220"
                            Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    Text="&#xf300;"
                                    Style="{DynamicResource IconTextBlockStyle}"/>
                                <TextBlock 
                                    Margin="5 0 0 0"
                                    Text="ПРОДОЛЖИТЬ"/>
                            </StackPanel>
                        </Button>
                        <Button
                            Margin="10 0 0 0"
                            x:Name="NewCaptchaButton"
                            Click="NewCaptchaButton_Click"
                            Width="190"
                            Style="{DynamicResource OtherButtonStyle}"
                            Height="40">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0 0 5 0"
                                    Text="&#xf307;"
                                    Style="{DynamicResource IconTextBlockStyle}"/>
                                <TextBlock 
                                    Margin="5 0 0 0"
                                    Text="Другая капча"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
