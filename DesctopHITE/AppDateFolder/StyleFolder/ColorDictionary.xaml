<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region Color-->
    <Color x:Key="Color1">#0a0a0a</Color>
    <Color x:Key="Color2">#0f0f0f</Color>
    <Color x:Key="Color3"></Color>
    <Color x:Key="Color4"></Color>
    <!--#endregion-->
    <SolidColorBrush x:Key="ControlPanel_Border-Color" Color="{DynamicResource Color1}"/>
    <SolidColorBrush x:Key="Background_Border-Color" Color="{DynamicResource Color2}"/>
</ResourceDictionary>