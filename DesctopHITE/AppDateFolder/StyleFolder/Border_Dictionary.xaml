<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="\AppDateFolder\StyleFolder\Color_Dictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="ControlPanel_Border-Style" TargetType="Border">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="{DynamicResource ControlPanel_Border-Color}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="10 10 0 0"/>
        <Setter Property="Grid.Row" Value="0"/>
    </Style>
    <Style x:Key="Background_Border-Style" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource Background_Border-Color}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0 0 10 10"/>
        <Setter Property="Grid.Row" Value="1"/>
    </Style>
</ResourceDictionary>